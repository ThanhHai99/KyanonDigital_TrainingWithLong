{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2019",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "incremental": true,
        // "skipLibCheck": true,
        "paths": {
            "@constant/*": ["constant/*"],
            "@module/*": ["module/*"],
            "@middleware/*": ["middleware/*"],
            "@service/*": ["service/*"],
            "@controller/*": ["controller/*"],
            "@entity/*": ["entity/*"],
            "@dto/*": ["dto/*"]
        }
    }
}
